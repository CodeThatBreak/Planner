<%- include('partials/header'); %>
<div class="container">
   <form METHOD ="POST" action="/addevents">
      <h1>Add Event</h1>
      <div class="row">
         <div class="col">
            <div class="form-group">
               <div class='input-group date' id='datetimepicker1'>
                  <input type='date' name="event[start]" class="form-control" />
                  <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                  </span>
               </div>
            </div>
         </div>
         <div class="col-xs pt-1">
            <label>To</label>
         </div>
         <div class="col">
            <div class="form-group">
               <div class='input-group date' id='datetimepicker2'>
                  <input type='date' name="event[end]" class="form-control" />
                  <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                  </span>
               </div>
            </div>
         </div>
      </div>
      <div class="form-group">
         <label for="email">Email address:</label>
         <textarea type="email" class="form-control" name="event[email]" id="email" required></textarea>
         <small id="emailHelp" class="form-text text-muted">Seprate Email Id by commas(,) </small>
      </div>
      <div class="form-group">
         <label for="title">Meeting Title:</label>
         <input type="text" class="form-control" name="event[title]" id="title" required>
      </div>
      <div class="form-group">
         <label for="body">Meeting Body:</label>
         <textarea type="text" class="form-control" name="event[body]" id="body" required></textarea>
      </div>
      <button class="btn btn-primary">Submit</button>
   </form>
</div>
<%- include('partials/footer'); %>